<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import lol.koblizek.bytelens.api.ui.JetBrainsButton?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            stylesheets="@../styles/darcula.css"
            fx:controller="lol.koblizek.bytelens.core.controllers.HomeViewController"
            prefHeight="400.0" prefWidth="600.0">
    <SplitPane dividerPositions="0.1" styleClass="home-split-pane" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" style="-fx-background-color: transparent">
        <AnchorPane minWidth="200" style="-fx-background-color: #2B2D30">
            <VBox AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" prefHeight="80" AnchorPane.topAnchor="0" alignment="CENTER">
                <Label alignment="CENTER">ByteLens 0.0.1b</Label>
                <Label style="-fx-text-fill: #656970" alignment="CENTER">pre-release testing version</Label>
            </VBox>
            <ListView fx:id="projectListing" VBox.vgrow="ALWAYS" style="-fx-background-color: inherit" AnchorPane.leftAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.rightAnchor="0"/>
        </AnchorPane>
        <VBox spacing="8" HBox.hgrow="ALWAYS" alignment="CENTER">
            <HBox alignment="CENTER" spacing="32">
                <VBox spacing="8" alignment="CENTER">
                    <JetBrainsButton iconSize="24" styleClass="welcome-button" icon="AllIcons.Expui.Welcome.CreateNewProjectTab"/>
                    <Label wrapText="true">Create New Project</Label>
                </VBox>
                <VBox spacing="8" alignment="CENTER">
                    <JetBrainsButton iconSize="24" styleClass="welcome-button" icon="AllIcons.Expui.Welcome.Open"/>
                    <Label>Open</Label>
                </VBox>
            </HBox>
            <HBox alignment="CENTER" spacing="32">
                <VBox spacing="8" alignment="CENTER">
                    <JetBrainsButton iconSize="24" styleClass="welcome-button" icon="AllIcons.Expui.General.Settings"/>
                    <Label>Settings</Label>
                </VBox>
                <VBox spacing="8" alignment="CENTER">
                    <JetBrainsButton iconSize="24" styleClass="welcome-button" icon="AllIcons.Expui.Nodes.Plugin"/>
                    <Label>Plugins</Label>
                </VBox>
            </HBox>
        </VBox>
    </SplitPane>
</AnchorPane>
